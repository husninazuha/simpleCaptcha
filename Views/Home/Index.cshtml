@using twoModelsInOneView.Models
@model dynamic
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form asp-action="Index">

        @foreach (Product product in Model.Product)
        {
            <tr>
                <input type="text" asp-for="@product.ProdTyp" class="form-control" />
               
            </tr>
        }

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>

    </form>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Product ID</th>
            <th>Product Type</th>
            <th>Price</th>
        </tr>
        @foreach (Product product in Model.Product)
        {
            <tr>
                
                <td>@product.ProdId</td>
                <td>@product.ProdTyp</td>
                <td>@product.price</td>
            </tr>
        }
    </table>
</body>
</html>